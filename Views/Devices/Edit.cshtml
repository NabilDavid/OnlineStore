@model OnLineStore.DevCatVM.DeviceCategoryVM

@{
    ViewData["Title"] = "Edit";
}

<div class=" m-auto text-center  ">
  
    <div class="row card m-auto text-center w-75">
    <h4 class="card-header m-auto text-center w-100 ">Device Edit</h4>
        <div class="card-body m-auto text-center">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="device.deviceId" />
                <div class="form-group">
                    <label asp-for="device.deviceName" class="control-label"></label>
                    <input asp-for="device.deviceName" class="form-control" />
                    <span asp-validation-for="device.deviceName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="device.acquisitionDate" class="control-label"></label>
                    <input asp-for="device.acquisitionDate" class="form-control" />
                    <span asp-validation-for="device.acquisitionDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="device.memo" class="control-label"></label>
                    <input asp-for="device.memo" class="form-control" />
                    <span asp-validation-for="device.memo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="device.categoryId" class="control-label"></label>
                    <select asp-for="device.categoryId" class="form-control" asp-items="ViewBag.categoryId"></select>
                    <span asp-validation-for="device.categoryId" class="text-danger"></span>
                </div>

                @for (var i=0; i< Model.devProps.Count; i++)
                {
            <div class="form-group">
                <label asp-for="devProps[i].property.propertyDesc" class="control-label">@Model.devProps[i].property.propertyDesc</label>
                
                <input  asp-for="devProps[i].value"   class="form-control" />
                <input hidden asp-for="devProps[i].deviceId"  class="form-control" />
                <input hidden asp-for="devProps[i].propertyId"  class="form-control" />
               
            </div>
                }

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
            <div>
                <a class="btn btn-info text-white" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
